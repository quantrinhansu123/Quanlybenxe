{
  "name": "ben-xe-backend",
  "version": "1.0.0",
  "description": "Backend API for Bus Station Management System",
  "main": "dist/functions.js",
  "type": "module",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "create-admin": "tsx src/scripts/create-admin.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:test": "tsx src/scripts/test-drizzle-connection.ts",
    "db:validate": "tsx src/scripts/validate-data-consistency.ts",
    "db:benchmark": "tsx src/scripts/benchmark.ts",
    "smoke-test": "tsx src/scripts/smoke-test.ts",
    "etl:analyze": "tsx src/db/migrations/etl/analyze-data.ts",
    "etl:validate": "tsx src/db/migrations/etl/validate-migration.ts",
    "etl:rollback": "tsx src/db/migrations/etl/rollback.ts"
  },
  "keywords": [
    "express",
    "supabase",
    "postgresql",
    "drizzle",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.90.1",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "postgres": "^3.4.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.16.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
