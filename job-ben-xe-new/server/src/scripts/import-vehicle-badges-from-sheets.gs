          inserted = true;
          Logger.log(`üîÑ Record ${i}: Set null t·∫•t c·∫£ FK v·∫´n duplicate`);
        } else {
          Logger.log(`‚ùå Record ${i}: V·∫´n l·ªói sau khi set null t·∫•t c·∫£ FK: ${result.error}`);
          errors.push(result.error || 'L·ªói kh√¥ng x√°c ƒë·ªãnh');
