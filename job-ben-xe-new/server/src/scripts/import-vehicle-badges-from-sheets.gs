              errors.push(`D√≤ng ${batchRowInfo[k].rowNumber}: ${errorMsg}`);
              statusUpdates.push({
                row: batchRowInfo[k].index,
                value: `L·ªói: ${errorMsg}`,
                background: '#f8d7da'
