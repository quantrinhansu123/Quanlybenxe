        } else {
          const duplicateIndices = result.duplicateIndices || [];
          const errorDetails = result.errors || [];
          
          for (let k = 0; k < batchRowInfo.length; k++) {
            if (duplicateIndices.includes(k) && CONFIG_BADGES.SKIP_DUPLICATES) {
