              const errorMsg = errorDetails[k] || result.error || 'L·ªói kh√¥ng x√°c ƒë·ªãnh';
              errors.push(`D√≤ng ${batchRowInfo[k].rowNumber}: ${errorMsg}`);
              statusUpdates.push({
